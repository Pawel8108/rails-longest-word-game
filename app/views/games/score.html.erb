<!-- app/views/games/new.html.erb -->
<h1>Games#score</h1>
<p>Find me in app/views/games/score.html.erb</p>

<%= form_with url: score_path, method: :post, data: { turbo: false } do %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= label_tag :word %>
  <%= text_field_tag :word %>
  <%= submit_tag 'Submit' %>
<% end %>
